{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist",
    "inlineSourceMap": true,
    "declarationDir": "dist",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "target": "ES2020"
  },
  "exclude": [
    "node_modules",
    "examples",
    "scripts",
    "dist"
  ]
}